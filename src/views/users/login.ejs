<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/users/login" method="POST">
				<div class="product-detail">
					<div class="col-12 col-md-6">
						<label for="email" class="form-label">Usuario</label>
						<input type="email" id="email" name="email" placeholder="E-mail" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="password" class="form-label">Contraseña</label>
						<input type="password" id="password" name="password" placeholder="Contraseña" class="form-input">
					</div>	
					<div class="col-12 col-md-6">
						<label for="recordame" class="form-label">Recordame</label>
						<input type="checkbox" id="recordame" name="recordame" >
					</div>						
					<div class="col-12">
						<button type="submit" class="buy-now-button">Ingresar</button>
					</div>					
				</div>
			</form>
			<div class="product-detail">
				<div class="col-12">
					<a href="/users/register"><button type="submit" class="buy-now-button">Crear Cuenta</button></a>
				</div>
			</div>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>