<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('../partials/head', {title: 'Formulario de creación'}) %>
<body>
	<!-- Header -->
	<%- include('../partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/users/register" method="POST">
				<div class="product-detail">
					<!-- <div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre</label>
						<input type="text" id="name" name="name" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="last_name" class="form-label">Apellido</label>
						<input type="text" id="last_name" name="last_namename" class="form-input">
					</div> -->
					<div class="col-12 col-md-6">
						<label for="email" class="form-label">E-mail</label>
						<input type="email" id="email" name="email"  class="form-input">
						<% if(typeof errors.email !== 'undefined') { %>
								<h2 style="color: red;"><%= errors.email.msg%></h2>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="password" class="form-label">Contraseña</label>
						<input type="password" id="password" name="password" class="form-input">
						<% if(typeof errors.password !== 'undefined') { %>
							<h2 style="color: red;"><%= errors.password.msg	 %></h2>
						<% } %>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Registrarme</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('../partials/footer') %>
	<!-- /footer -->
</body>	
</html>